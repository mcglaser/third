<%= form_for(@user) do |f| %>
  <%= f.label :email %>
<%= f.email_field :email %><br><br>
<%= f.label :password, 'Password' %>
<%= f.password_field :password %><br><br>
<%= f.label :password_confirmation, "Confirm Password" %>
<%= f.password_field :password_confirmation %><br><br>
<%= f.label :first_name, 'First Name' %>
<%= f.text_field :first_name %><br><br>
<%= f.label :last_name, 'Last Name' %>
<%= f.text_field :last_name %><br><br>
<%= f.label :address_line_one, 'Address Line 1' %>
<%= f.text_field :address_line_one %><br><br>
<%= f.label :address_line_two, 'Address Line 2' %>
<%= f.text_field :address_line_two %><br><br>
<%= f.label :pays_for_internet, 'Do You Currently Pay For Internet At Home?' %>
<%= f.select :pays_for_internet, [['Yes', true], ['No', false]] %><br><br>
<%= f.label :lives_in_community, 'Do You Live In A Named Community? (ex: apartment complex or gated community)' %>
<%= f.select :lives_in_community, [['Yes', true], ['No', false]] %><br><br>
<%= f.label :internet_type, 'What Type Of Internet Do You Currently Have?' %>
<%= f.select :internet_type, ['I do not currently have internet', 'Dial-up', 'DSL', 'Fibre Optic', 'Broadband', 'Mobile Internet', 'Satellite Internet', 'Other', 'Unknown'] %><br><br>
<%= f.label :internet_type, 'Which Of The Following Download Speeds Most Closely Matches Your Home Internet?' %>
<%= f.select :internet_type, ['I do not currently have internet', '56k', '1 Mbps', '5 Mbps', '10 Mbps', '20Mbps', '30 Mbps', '40 Mbps', '50 Mbps', '75 Mbps', '100 Mbps or more', 'Unknown'] %><br><br>
<%= f.label :monthly_cost, 'What Is Your Home Internet\'s Monthly Cost? (Leave Blank If You Don\'t Currently Have Internet)' %>
<%= f.text_field :monthly_cost %><br><br>
<%= f.label :community_name, 'What Is The Name Of Your Community? (Leave Blank If You Don\'t Currently Live In A Named Communnity)' %>
<%= f.text_field :community_name %><br><br>
  <%= f.submit "Save changes" %>
<% end %>